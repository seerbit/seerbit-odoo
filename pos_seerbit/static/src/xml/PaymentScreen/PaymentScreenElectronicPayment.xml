<?xml version="1.0" encoding="utf-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="SeerbitPaymentScreenElectronicPayment" t-inherit="point_of_sale.PaymentScreenElectronicPayment" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[@class='paymentline electronic_payment']" position="inside">
            <t t-elif="props.line.payment_status == 'waitingSeerbit'">
                <div>
                    Waiting
                </div>
                <div class="button send_force_done dangerous"
                     title="Force Done"
                     t-on-click="trigger('send-force-done', props.line)">
                    Force Confirm
                </div>
            </t>
            <t t-elif="props.line.payment_status == 'errorSeerbit'">
                <div>
                    Error
                </div>
                <div class="button send_force_done dangerous"
                     title="Force Done"
                     t-on-click="trigger('send-force-done', props.line)">
                    Force Confirm
                </div>
                <div class="button send_payment_request highlight"
                     title="Send Payment Request"
                     t-on-click="trigger('send-payment-request', props.line)">
                    Retry
                </div>
            </t>
        </xpath>
    </t>
</templates>
